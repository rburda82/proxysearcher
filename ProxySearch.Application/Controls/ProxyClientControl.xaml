<UserControl x:Class="ProxySearch.Console.Controls.ProxyClientControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Name="Control">
    <ToggleButton IsChecked="{Binding ElementName=Control, Path=IsChecked}" BorderThickness="0" Width="40" Height="25" Focusable="False">
            <Image Source="{Binding ElementName=Control, Path=ProxyClient.Image}" ToolTip="{Binding ElementName=Control, Path=ProxyClient.Name}" />
    </ToggleButton>
</UserControl>
